.org $1FFF

program:
MOV $0000, V0
MUL 32, 64 ; Set V1 to 32 * 64
MOV AX, V1 ; Copy V1 to AX
MOV 1, V2 ; Color value 1

reset:
INC
MOV $0000, V0 ;
ADD V2, 1 ; Increment color value V2
MOV AX, V2 ; Copy V2 to AX

draw:
ADD V0, 2 ; Increment V0 by 1
MOV AX, V0 ; Copy AX to V0

GT V0, V1 ; V0 > V1?
BZ
JMP reset

MOV $06, [V0+$3FFF] ; Set pixel at V0 to color 6
JMP draw ; Repeat drawing